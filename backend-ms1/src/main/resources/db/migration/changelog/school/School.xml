<!-- db/changelog-1.1-container.xml -->

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

  <!-- Create Container Table -->
    <changeSet id="1" author="your-name">
    <createTable tableName="school">
      <column name="id" type="BIGINT">
        <constraints primaryKey="true" nullable="false"/>
      </column>
        <column name="name" type="VARCHAR(500)"/>
        <column name="address" type="VARCHAR(500)"/>
        <column name="phone_number" type="VARCHAR(500)"/>
        <column name="description" type="VARCHAR(500)"/>

        <column name="principal_id" type="BIGINT">
          <constraints nullable="false"/>
        </column>

    </createTable>
  </changeSet>

    <!-- Add foreign key constraint -->
  <changeSet id="2" author="your-name">
      <addForeignKeyConstraint
              baseTableName="school"
              baseColumnNames="principal_id"
              referencedTableName="principal"
              referencedColumnNames="id"
              constraintName="fk_school_principal"/>

  </changeSet>

    <!-- Create Sequence for ContainerType -->
  <changeSet id="3" author="your-name">
    <createSequence sequenceName="school_seq" startValue="1" incrementBy="1"/>
  </changeSet>

  <!-- Load Data from CSV -->
  <changeSet id="4" author="your-name">
    <loadData
            file="classpath:/db/migration/data/school/School.csv"
            tableName="school">
      <column name="id" type="NUMERIC"/>
          <column name="name" type="STRING"/>
          <column name="address" type="STRING"/>
          <column name="phone_number" type="STRING"/>
          <column name="description" type="STRING"/>
        <column name="principal" type="BIGINT"/>
    </loadData>
  </changeSet>


</databaseChangeLog>
